<h2>Current Cart</h2>
<%= link_to "Back", root_path, class: "btn btn-secondary" %>
<br>
<br>

<table class="table  table-stripes table-bordered table-hover">
  <thead>
  <tr>
    <td>Product</td>
    <td>Price</td>
    <td>Quantity</td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= number_to_currency(item.price) %></td>
      <td><%= item.quantity %></td>
      <td>
        <%= form_for item, method: :delete do |f| %>
          <%= f.submit "Remove", class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td colspan="4" align="right">
      <%= number_to_currency current_cart.sub_total %>
    </td>
  </tr>
  </tfoot>
</table>
<%= link_to "Checkout", checkout_path, class: "btn btn-secondary" %>