<h2>Checkout</h2>

<%= form_for @purchase, url: checkout_path do |f| %>
  <table class="table  table-stripes table-bordered table-hover">
    <thead>
    <tr>
      <td>Product</td>
      <td>Price</td>
      <td>Quantity</td>
    </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.quantity %></td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="3" align="right">
        <%= number_to_currency current_cart.sub_total %>
      </td>
    </tr>
    </tfoot>
  </table>
  <strong>Confirm purchase for</strong>
  <%= @current_user.email %>
  <br>
  <%= f.submit "Checkout", class: "btn btn-danger" %>
<% end %>